---
import "@goldshore/theme/tokens.css";

const items = ['Dashboard', 'Customers', 'Subscriptions', 'Workflows', 'Trading', 'Orders', 'Risk', 'Reports', 'Settings'];
---
<html>
  <body class="bg-[var(--bg)] text-[var(--text)]">
    <aside class="fixed left-0 top-0 h-full w-56 border-r p-4">
      <img src="/assets/goldshore/logo-wordmark-on-light.svg" height="24" alt="GoldShore" />
      <ul class="mt-4 space-y-2">
        {items.map((i) => (
          <li>
            <a href={`/${i.toLowerCase()}`} class="hover:underline">{i}</a>
          </li>
        ))}
      </ul>
    </aside>
    <main class="ml-56 p-6">
      <slot />
    </main>
  </body>
</html>

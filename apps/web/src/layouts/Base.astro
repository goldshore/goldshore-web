---
import "@goldshore/theme/tokens.css";

const nav = [
  { label: 'Products', href: '#products' },
  { label: 'Trading Dashboard', href: '/dash' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'Blog', href: '/blog' },
  { label: 'Docs', href: 'https://api.goldshore.org/v1/docs' },
  { label: 'Admin', href: 'https://admin.goldshore.org' }
];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/packages/assets/goldshore/logo-wordmark-on-light.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>GoldShore</title>
  </head>
  <body class="bg-[var(--bg)] text-[var(--text)]">
    <header class="mx-auto flex max-w-7xl items-center gap-6 p-4">
      <img src="/packages/assets/goldshore/logo-wordmark-on-light.svg" alt="GoldShore" height="28" />
      <nav class="ml-auto flex gap-5">
        {nav.map((n) => (
          <a href={n.href} class="hover:underline">
            {n.label}
          </a>
        ))}
        <a href="/signup" class="rounded bg-[var(--brand)] px-3 py-1 text-[var(--brand-contrast)]">
          Get Started
        </a>
      </nav>
    </header>
    <slot />
  </body>
</html>

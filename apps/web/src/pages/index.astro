---
import Base from '../layouts/Base.astro';
---
<Base>
  <main class="mx-auto max-w-6xl p-6">
    <section class="py-12">
      <h1 class="font-display text-4xl">GoldShore â€” trading infrastructure & insights</h1>
      <div class="mt-4 flex gap-3">
        <a href="/dash" class="rounded bg-[var(--brand)] px-4 py-2 text-[var(--brand-contrast)]">Launch Dashboard</a>
        <a href="https://api.goldshore.org/v1/docs" class="rounded border border-[var(--border)] px-4 py-2">View API Docs</a>
      </div>
    </section>
    <section id="products" class="grid gap-4 py-8 md:grid-cols-3">
      <a class="rounded border p-4" href="https://api.goldshore.org/v1/health">Trading API</a>
      <a class="rounded border p-4" href="https://api.goldshore.org/v1/risk/limits">Options &amp; Risk</a>
      <a class="rounded border p-4" href="https://admin.goldshore.org">Admin &amp; CRM</a>
    </section>
    <section id="pricing" class="grid gap-4 py-8 md:grid-cols-3">
      <a class="rounded border p-4" href="/signup?plan=free">Free</a>
      <a class="rounded border p-4" href="/signup?plan=pro">Pro</a>
      <a class="rounded border p-4" href="/signup?plan=enterprise">Enterprise</a>
    </section>
    <section id="contact" class="py-8">
      <form method="post" action="https://api.goldshore.org/v1/lead" class="flex gap-2">
        <input
          name="email"
          type="email"
          required
          placeholder="you@company.com"
          class="flex-1 rounded border p-2"
        />
        <button class="rounded bg-[var(--brand)] px-4 py-2 text-[var(--brand-contrast)]" type="submit">
          Request Access
        </button>
      </form>
    </section>
  </main>
</Base>

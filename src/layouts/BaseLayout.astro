---
import '../styles/global.css';

const {
  title = 'GoldShore | Infrastructure for High-Trust AI',
  description = 'GoldShore helps teams deploy high-trust AI experiences with resilient infrastructure, expert guidance, and observability built-in.'
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://goldshore.org';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={siteUrl} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body class="min-h-screen bg-background">
    <slot />
  </body>
</html>

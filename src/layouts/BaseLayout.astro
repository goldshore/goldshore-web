---
import '../styles/global.css';
import '../styles/shadcn.css';

const {
  title = 'GoldShore | Infrastructure for High-Trust AI',
  description = 'GoldShore helps teams deploy high-trust AI experiences with resilient infrastructure, expert guidance, and observability built-in.'
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://goldshore.org';
---
<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={siteUrl} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Inter+Tight:wght@600;700&family=JetBrains+Mono:wght@500&display=swap"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/svg+xml" sizes="128x128" href="/icon-128.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <script is:module>
      try {
        const storageKey = 'gs-theme';
        const stored = localStorage.getItem(storageKey);
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefersDark ? 'dark' : 'light');
        const root = document.documentElement;
        if (theme === 'dark') {
          root.dataset.theme = 'dark';
        } else {
          root.dataset.theme = '';
          root.removeAttribute('data-theme');
        }
      } catch (error) {
        console.warn('Theme hydration failed', error);
      }
    </script>
  </head>
  <body class="min-h-screen bg-bg text-text antialiased">
    <slot />
  </body>
</html>
